<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menubackgroundedited"
    android:gravity="center"
     >
     
    <RelativeLayout
        android:id="@+id/topLayoutCardDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cardtopcarddetails"
        android:orientation="vertical"
        android:paddingBottom="73dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp" >
        
        <TextView
	        android:id="@+id/cardTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="17dp"
	        android:layout_marginTop="3dp"
	        android:text="Card Title Here" />
    
    	<TextView
	        android:id="@+id/cardCost"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="17dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="3dp"
	        android:text="Card Cost Here" />
    
	    <ImageView
	        android:id="@+id/cardView"
	        android:layout_width="281dp"
	        android:layout_height="394dp"
	        android:layout_marginLeft="43dp"
	        android:layout_marginTop="92dp"
	        android:background="@drawable/testcard"/>
    
	    <Button 
	        android:id="@+id/addCard"
	        android:layout_width="200dp"
	        android:layout_height="75dp"
	        android:layout_marginLeft="60dp"
	        android:layout_marginTop="280dp"
	        android:layout_toRightOf="@+id/cardView"
	        android:text="Add Card"/>
    
	    <Button 
	        android:id="@+id/deleteCard"
	        android:layout_width="200dp"
	        android:layout_height="75dp"
	        android:layout_marginLeft="60dp"
	        android:layout_marginTop="390dp"
	        android:layout_toRightOf="@+id/cardView"
	        android:text="Delete"/>
        
    </RelativeLayout>
        
    <RelativeLayout
        android:id="@+id/middleLayoutCardDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cardmiddlecarddetails"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="28dp">
	    
        <TextView
	        android:id="@+id/cardType"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="17dp"
	       
	        android:text="Card Type Here" />
    
	    <TextView
	        android:id="@+id/cardRarity"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="17dp"
	        android:layout_alignParentRight="true"
	       
	        android:text="Card Rarity Here" />
        
    </RelativeLayout>
        
    
     <RelativeLayout
        android:id="@+id/bottomLayoutCardDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cardbottomcarddetails"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp" >
	    
         <TextView
	        android:id="@+id/cardText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="35dp"
	        android:layout_marginTop="120dp"
	        android:text="Card Text Here" />
    
	    <TextView
	        android:id="@+id/cardFlavorText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textStyle="italic" 
	        android:paddingTop="15dp"
	        android:layout_marginLeft="35dp"
	       	android:layout_below="@+id/cardText"
	        android:text="Flavor Text Here" />
	    
	    <TextView
	        android:id="@+id/cardPower"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="17dp"
	       	android:layout_marginTop="410dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginBottom="0dp"
	        android:text="Card Power Here" />
	    
	    <TextView
	        android:id="@+id/cardArtist"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="17dp"
	        android:layout_marginTop="420dp"
	        android:layout_alignParentLeft="true"
	        android:layout_marginBottom="0dp"
	        android:text="Card Artist Here" />
        
     
     </RelativeLayout>

    
    
    
    
    
    
    

</LinearLayout>
