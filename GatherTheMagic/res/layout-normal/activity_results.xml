<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity"
    android:background="@drawable/menubackgroundedited" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="225dp"
        android:layout_height="103dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gatherlogo"/>
    
    
    
    <ListView
        android:id="@+id/resultsList"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@+id/logo"
        android:layout_marginTop="30dp"/>
    
    <Button 
        android:id="@+id/resultsActivityNewDeckButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultsList"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"
        android:text="Add New Deck"
        android:visibility="invisible"/>
    
    <Button 
        android:id="@+id/resultsActivityDeleteDeckButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultsList"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"
        android:text="Delete Deck"
        android:visibility="invisible"/>
    
    

</RelativeLayout>
