<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBrowseActivity"
    android:background="@drawable/menubackgroundedited" >
    
    <ImageView
        android:id="@+id/logo"
        android:layout_width="225dp"
        android:layout_height="103dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gatherlogo"/>

    <EditText
        android:id="@+id/searchBrowseSearchBox"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="35dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter card name"/>
    
    <Button 
        android:id="@+id/searchBrowseButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@+id/searchBrowseSearchBox"
        android:text="Search"/>
    
    <Spinner 
        android:id="@+id/browse"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="230dp"/>
    
    <Spinner 
        android:id="@+id/browse2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/browse"
        />
    
    
     <Button 
        android:id="@+id/browseButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/browse2"
        android:text="Browse"/>

</RelativeLayout>
